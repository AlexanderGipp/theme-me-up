<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:ThemeMeUp.Avalonia.ViewModels;assembly=ThemeMeUp.Avalonia"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="ThemeMeUp.Avalonia.Views.MainWindow"
        Icon="/Assets/avalonia-logo.ico"
        Title="ThemeMeUp.Avalonia">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <StackPanel>
        <TextBox Watermark="Search term..." Text="{Binding SearchTerm, Mode=TwoWay}" />
        <Button Width="160" Command="{Binding OnGetWallpapers}">Fetch wallpapers</Button>
        
        <ListBox Items="{Binding Wallpapers}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Image Source="{Binding ThumbnailBitmap}" HorizontalAlignment="Center"></Image>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </StackPanel>

</Window>
